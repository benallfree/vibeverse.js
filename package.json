{
  "name": "vibeverse.js",
  "version": "0.1.0",
  "description": "A JavaScript module for creating interconnected 3D web game portals with Three.js",
  "author": {
    "name": "Ben Allfree",
    "url": "https://github.com/benallfree"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/benallfree/vibeverse.js"
  },
  "type": "module",
  "main": "./dist/vibeverse.js",
  "module": "./dist/vibeverse.js",
  "types": "./dist/vibeverse.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vibeverse.js",
      "types": "./dist/vibeverse.d.ts"
    },
    "./debug": {
      "import": "./dist/vibeverse.debug.js",
      "types": "./dist/vibeverse.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "format": "prettier --write ."
  },
  "keywords": [
    "three.js",
    "3d",
    "webgl",
    "portal",
    "metaverse",
    "gaming"
  ],
  "license": "MIT",
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/three": "^0.175.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "type-fest": "^4.39.1",
    "typescript": "^5.8.2",
    "three": "^0.175.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
